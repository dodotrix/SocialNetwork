@model MiniFacebook.Models.PostViewModel
@using (Html.BeginForm("CreatePost", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" }))
{
    <div>
        @Html.ValidationSummary("", new { @class = "text-danger" })
        @Html.TextAreaFor(m => m.Text, new { @class = "form-control", @rows = 3 })
        <button type="submit" class="btn btn-default" style="margin-top:5px">Submit</button>
    </div>



}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>